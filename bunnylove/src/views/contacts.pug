        symbol#ico-point(xmlns='http://www.w3.org/2000/svg', fill='currentColor', viewbox='0 0 10 16')
          path(d='M10 5.5C10 2.5 7.8 0 5 0S0 2.5 0 5.5V6c0 3 5 10 5 10s5-7 5-10v-.5zM5 7c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2z')
        symbol#ico-time(xmlns='http://www.w3.org/2000/svg', viewbox='0 0 28 28')
          circle(cx='14', cy='14', r='14', fill='currentColor')
