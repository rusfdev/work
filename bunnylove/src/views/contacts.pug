extends layout/layout
block content 
  include blocks/breadcrumbs
  .container
    section.section.contacts
      h1.section__title Контакты
      .row
        .col-xl-9.col-lg-8.col-md-7
          .contacts__map
            iframe(src="https://yandex.ru/map-widget/v1/-/CCQx7GdCcD")
        .contacts-info.col-xl-3.col-lg-4.col-md-5
          img(src=href+"/img/truck.svg", alt="ico").contacts-info__icon
          h6.contacts-info__title Курьерская доставка осуществляется круглосуточно
          ul.contacts-info__list
            li.contacts-info__item
              img(src="https://bunnylove.ru/static/svg/vk.svg", alt="icon")
              span
                | Группа 
                a(href="#" rel='nofollow' target='_blank') Вконтакте
            li.contacts-info__item
              img(src="https://bunnylove.ru/static/svg/inst.svg", alt="icon")
              span
                | Instagram  
                a(href="#" rel='nofollow' target='_blank') bunnyloveru
            li.contacts-info__item
              svg.contacts-info__item-mail-icon
                use(xlink:href='#mailIcon')
              span
                | E-mail:   
                a(rel='nofollow', target='_blank', href='mailto:info@bunnylove.ru') info@bunnylove.ru
      .contacts__blocks
        .row
          -var order = 0;
          mixin contacts-block(title)
            -order++
            .contacts-block.col-lg-4.col-md-6
              .contacts-block__container
                h5.contacts-block__title=title
                ul.contacts-block__list 
                  li.contacts-block__item
                    svg.icon
                      use(xlink:href='#ico-point')
                    .contacts-block__item-content
                      p
                        strong  г. Самара, пр. Металлургов, 81
                      p (напротив ТОЦ "СкалаХолл" и магазина "Золотое яблоко")
                  li.contacts-block__item
                    svg.icon
                      use(xlink:href='#ico-phone')
                    .contacts-block__item-content
                      p 
                        strong тел. 8(800) 333-53-49
                      p 
                        strong тел. 8(800) 333-53-49
                  li.contacts-block__item
                    svg.icon
                      use(xlink:href='#ico-time')
                    .contacts-block__item-content
                      p 
                        strong Время работы магазина<br> — c 10:00 до 22:00
                .contacts-block__gallery
                  a.fancybox(href="https://bunnylove.ru/media/shop_images/IMG_0901.JPG" rel=order)
                    img(src="https://bunnylove.ru/media/shop_images/IMG_0901.JPG", alt="image")
                  a.fancybox(href="https://bunnylove.ru/media/shop_images/IMG_0903.JPG" rel=order)
                    img(src="https://bunnylove.ru/media/shop_images/IMG_0903.JPG", alt="image")
                  a.fancybox(href="https://bunnylove.ru/media/shop_images/FullSizeRender1_X2bbrgq.jpg" rel=order)
                    img(src="https://bunnylove.ru/media/shop_images/FullSizeRender1_X2bbrgq.jpg", alt="image")
                .contacts-block__label 3 фото

          +contacts-block('Ново-Вокзальная, 146а')
          +contacts-block('ПР. МЕТАЛЛУРГОВ, 81')
          +contacts-block('МОСКОВСКОЕ ШОССЕ, ЛИТ.В')
          +contacts-block('ПР. МЕТАЛЛУРГОВ, 81')
          +contacts-block('МОСКОВСКОЕ ШОССЕ, ЛИТ.В')



