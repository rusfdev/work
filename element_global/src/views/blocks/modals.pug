.modal-wrapper#modal-wfn(data-scroll-lock-scrollable) 
  .modal-close-area(data-action="Modal:close")
  .modal-block.modal-wfn
    .modal-block__background
    .modal-block__content
      h2.modal-wfn__title #WFH
      .modal-wfn__text
        each text in $i18n.wfn.text
          p=text

      .modal-wfn__button
        button(type="button" data-action="Modal:close").button
          span.button__front=$i18n.wfn.button
          span.button__back

