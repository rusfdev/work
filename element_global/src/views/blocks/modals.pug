.modal-wrapper#modal-get-in-touch(data-scroll-lock-scrollable)
  .modal-close-area(data-action="Modal:close")
  .modal-block.modal-get-in-touch
    button.modal-close(data-action="Modal:close")
    .modal-block__background.modal-get-in-touch__background
    .modal-block__content
      include form