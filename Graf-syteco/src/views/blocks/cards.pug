        img(data-src="http://grafsyteco4.live.tietge.com/assets/Uploads/Bilder/News-Presse/Z-Control-Foto-InnoRollOut2020__FocusFillWzE5MjAsODAwLCJ5IiwyNTZd.jpg", alt="image").lazyload
