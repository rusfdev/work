    .block-card__container.image.image_cover.js-touch-hover
      if type==1
        img(data-src="http://grafsyteco4.live.tietge.com/assets/Uploads/Bilder/Produkte/4_3-Zoll/GSt-A043_Frontal_GrauBack__FocusFillWzE5MjAsODAwLCJ5Iiw0MDRd.jpg", alt="image").lazyload
