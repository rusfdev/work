    //styles
    link(rel="stylesheet" href="./css/common.css")

  body
    .wrapper

      header.header
        .container.grid.header__container
          a(href="#").logo
            img(src="./img/logos/logo.svg", alt="logo").logo__image
          nav.nav 
            ul.nav__list 
              li.nav__item 
                a(href="#").nav__link.active ГЛАВНАЯ 
              li.nav__item 
                a(href="#").nav__link ОБ АВТОРЕ
              li.nav__item 
                a(href="#").nav__link РАБОТЫ
              li.nav__item 
                a(href="#").nav__link ПРОЦЕСС
              li.nav__item 
                a(href="#").nav__link КОНТАКТЫ

      main.main

        section.section.home-screen
          .container.grid.home-screen__container
            .home-screen__image 
              img(src="./img/computer.svg", alt="image")
            .home-screen__content
