        img(src="./assets/images/logos/logo-white.png", alt="logo").logo__image
      ul.footer__contacts-list 
        li.footer__contacts-item 
          a(href="tel:70000000000").footer__contacts-element
            svg.icon
              use(xlink:href='./assets/images/icons/icons.svg#phone')
            span +7 (000) 000-00-00
        li.footer__contacts-item 
          a(href="mailto:energohelp@gmail.com").footer__contacts-element
            svg.icon
              use(xlink:href='./assets/images/icons/icons.svg#envelope')
            span energohelp@gmail.com
