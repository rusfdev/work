include ../blocks/variables
block variables
doctype html
html(lang='ru')
  head
    meta(charset="utf-8")
    title #{title}
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name='format-detection' content='telephone=no')
    //color
    meta(name="theme-color" content="#000")
    //favicons
    link(rel='apple-touch-icon' sizes='180x180' href='./img/favicons/apple-touch-icon.png')
    link(rel='icon' type='image/png' sizes='32x32' href='./img/favicons/favicon-32x32.png')
    link(rel='icon' type='image/png' sizes='16x16' href='./img/favicons/favicon-16x16.png')
    //open graph
    meta(property='og:title' content='Заголовок сайта')
    meta(property='og:site_name' content=sitename)
    meta(property='og:url' content='') 
    meta(property='og:description' content='Описание сайта')
    meta(property='og:image' content='')
    //fonts
    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap' rel='stylesheet')
    //styles
    link(rel="stylesheet" href="./styles/common.css")

  body
    .wrapper
      .image.image_cover.main-background
        img(data-src="./img/background.png", alt="img").lazyload
      include ../blocks/header
      main.main
        block content
      include ../blocks/footer
    
    //libs
    script(src="./scripts/libs/modernizr-custom.js")
    script(src="./scripts/libs/current-device.min.js")
    script(src="./scripts/libs/lazysizes.min.js")
    script.
      lazySizes.cfg.preloadAfterLoad = true;
    script(src='./scripts/libs/aos/aos.js')
    script(src='./scripts/libs/aos/aos.css')
    //scripts
    script(src="./scripts/scripts.js")
