block variables
doctype html
html(lang='ru')
  head
    meta(charset="utf-8")
    title #{title}
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name='format-detection' content='telephone=no')
    //color
    meta(name="theme-color" content="#fff")
    //favicons
    link(rel='apple-touch-icon' sizes='180x180' href='./img/favicons/apple-touch-icon.png')
    link(rel='icon' type='image/png' sizes='32x32' href='./img/favicons/favicon-32x32.png')
    link(rel='icon' type='image/png' sizes='16x16' href='./img/favicons/favicon-16x16.png')
    //open graph
    meta(property='og:title' content='Заголовок страницы')
    meta(property='og:site_name' content='Название сайта')
    meta(property='og:url' content='Ссылка на текущую страницу') 
    meta(property='og:description' content='Описание страницы')
    meta(property='og:image' content='Изображение страницы')
    //styles
    link(rel="stylesheet" href="./styles/bootstrap/bootstrap.css")
    link(rel="stylesheet" href="./styles/main.css")
  
  body
    .wrapper
      include ../blocks/header
      main.main
        block content
      include ../blocks/footer

    //scripts
    script(src="./scripts/libs/lazysizes.min.js")
    script(src="./scripts/libs/gsap.min.js")
    script(src="./scripts/libs/scroll-lock.min.js")
    script(src="./scripts/main.js")
