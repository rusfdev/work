header.header
  .header__top
    .container
      ul.header__top-nav
        mixin navitem(title)
          li.header__top-nav-item
            a(href="#").header__top-nav-link
              span=title
              block
        +navitem('Оплата')
        +navitem('Доставка')
        +navitem('О компании')
        +navitem('Юридическим лицам')
        +navitem('Новости')
        +navitem('Акции')
          i.fas.fa-bolt
        +navitem('Контакты')
      ul.header__top-socials
        mixin social(title)
          li.header__top-socials-item
            a(href="#").header__top-socials-link
              block
        +social()
          <i class="fab fa-facebook-f"></i>
        +social()
          <i class="fab fa-vk"></i>
        +social()
          <i class="fab fa-instagram"></i>
        +social()
          <i class="fab fa-odnoklassniki"></i>
  .header__content
    .container
      .row
        .header__content-left.col-lg-3.col-auto
          .logo
            a(href="index.html").logo__link
              img(src="img/logos/logo.png", alt="logo").logo__image
