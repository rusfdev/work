mixin card2(title, image, grid)
  .category-card(class=grid)
    a(href="service.html").category-card__container
      .image.image_cover
        img(src=image, alt="image")
      h3.category-card__title=title
        svg.icon(viewBox='0 0 10.5 18.1')
          path(d='M1.4,18.1L0,16.7l7.6-7.6L0,1.5L1.4,0l9,9.1C10.4,9.1,1.3,18.1,1.4,18.1z')


mixin card3(type, classes)
  .preview-block(class=classes)
    a(href="#").preview-block__container 
      .preview-block__image.image.image_cover
        img(src=href+"/img/767773b7699f15e02052b250d92c0c7f.png", alt="image")
      .preview-block__content(style='background-color:#16151A;')
        if type!==''
          span.preview-block__label(style='background-color:#FFCC00;')=type
        h6.preview-block__title DISTORIUM.RU - первый умный дистрибьютер на платформе стройкер


mixin card4(type, classes)
  .banner-item(class=classes)
    a(href="#").banner-item__container(style='background-color:#e1e1e1;')
      if type==1
        .banner-item__text-content.text-page
          h3 заголовок
          p Текст для баннера
          ul 
            li список
      else if type==2
        img(src=href+'/img/image 56.png', alt="image")
