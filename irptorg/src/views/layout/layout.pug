include ../blocks/variables
block variables
doctype html
html(lang='ru')
  head
    meta(charset="utf-8")
    title #{title}
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name='format-detection' content='telephone=no')
    meta(name='description' content='Изготовление и продажа индивидуальных рационов питания.')
    //color
    meta(name="theme-color" content="#fff")
    //favicons
    link(rel="shortcut icon" href="https://irptorg-opt.ru/img/favicons/favicon.ico" type="image/x-icon")
    link(rel="icon" sizes="16x16" href="https://irptorg-opt.ru/img/favicons/favicon-16x16.png" type="image/png")
    link(rel="icon" sizes="32x32" href="https://irptorg-opt.ru/img/favicons/favicon-32x32.png" type="image/png")
    link(rel="icon" sizes="48x48" href="https://irptorg-opt.ru/img/favicons/favicon-48x48.png" type="image/png")
    //open graph
    meta(property='og:title' content='Изготовление и продажа индивидуальных рационов питания.')
    meta(property='og:site_name' content=sitename)
    meta(property='og:url' content='https://irptorg-opt.ru/') 
    meta(property='og:description' content='Только сертифицированная продукция от производителя.')
    meta(property='og:image' content='https://irptorg-opt.ru/img/ИРП.png')


  body(style='opacity:0;visibility:hidden;pointer-events:none;')
