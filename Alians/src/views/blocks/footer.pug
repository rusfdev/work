footer.footer
  .background.footer__image.lazyload(data-src='./img/footer.png')
  .container.footer__container
    .footer__left
      .logo
        a(href="index.html").logo__link
          img(src="./img/logos/logo2.png", alt="logo").logo__image
        span.logo__text Территориальное общественное самоуправление<br> Альянс, г.Екатеринбург
    
      ul.footer__contacts-list
        li.footer__contacts-item
          span Телефон: 
          a(href='tel:74951234567').footer__contacts-link +7 495 123-45-67
        li.footer__contacts-item
          span Почта: 
          a(href="mailto:info@yoursite.ru").footer__contacts-link info@yoursite.ru
    
    .footer__socials
      span.footer__socials-title Наши страницы в социальных сетях:
      ul.socials
        li.socials__item
          a(href="#").socials__link
            svg.icon
              use(xlink:href='./img/icons/icons-sprite.svg#vk')
        li.socials__item
          a(href="#").socials__link
            svg.icon
              use(xlink:href='./img/icons/icons-sprite.svg#instagram')
        li.socials__item
          a(href="#").socials__link
            svg.icon
              use(xlink:href='./img/icons/icons-sprite.svg#telegram')
        li.socials__item
          a(href="#").socials__link
            svg.icon
              use(xlink:href='./img/icons/icons-sprite.svg#ok')
    
    a(href="#popup" data-popup-open).button.footer__btn
      svg.icon
        use(xlink:href='./img/icons/icons-sprite.svg#comment')
      span принять участие 